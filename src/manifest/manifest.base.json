{
    "manifest_version": 3,
    "name": "AnimeStar Extension",
    "version": "0.0.24",
    "description": "Enhanced functionality for AnimeStar website",
    "permissions": [
        "storage",
        "alarms"
    ],
    "host_permissions": [
        "https://raw.githubusercontent.com/Teri-anric/AnimeStarsExtensions/*",
        "https://ass-api.strawberrycat.dev/*",
        "https://ass.strawberrycat.dev/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*/*"
            ],
            "js": [
                "./scripts/auto_seen_card.js",
                "./scripts/auto_take_cinema_stone.js"
            ],
            "css": [
                "./styles/auto_seen_card.css"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://*/*"
            ],
            "js": [
                "./scripts/fix_header.js"
            ],
            "css": [
                "./styles/fix_header.css"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": [
                "https://*/*"
            ],
            "js": [
                "./scripts/card_indexer.js",
                "./scripts/card_widgets.js"
            ],
            "css": [
                "./styles/card_user_count.css"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": [
                "https://*/user/*"
            ],
            "js": [
                "./scripts/user_card_buttons.js"
            ],
            "css": [
                "./styles/user_card_buttons.css"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": [
                "https://*/cards*"
            ],
            "js": [
                "./scripts/cards_search_integration.js"
            ],
            "css": [
                "./styles/cards_search_integration.css"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://*/cards_remelt/",
                "https://*/cards_remelt/*"
            ],
            "js": [
                "./scripts/remelt_topbar.js"
            ],
            "css": [
                "./styles/remelt_topbar.css"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://*/trades/history*",
                "https://*/trades/history/*"
            ],
            "js": [
                "./scripts/trades_history_filters.js"
            ],
            "css": [
                "./styles/trades_history_filters.css"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://*/trades/*/",
                "https://*/trades/offers/*/",
                "https://*/trades/",
                "https://*/trades/offers/"
            ],
            "js": [
                "./scripts/trade_previews.js"
            ],
            "css": [
                "./styles/trade_previews.css"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": [
                "https://*/cards/users/*"
            ],
            "js": [
                "./scripts/cards_users_parser.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://*/clubs/boost/*"
            ],
            "js": [
                "./scripts/boost_club.js",
                "./scripts/boost_club_auto.js"
            ],
            "css": [
                "./styles/boost_club.css"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": [
                "https://*/pm/*"
            ],
            "js": [
                "./scripts/pm.js"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": [
                "https://ass.strawberrycat.dev/*"
            ],
            "js": [
                "./scripts/token_bridge.js"
            ],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png",
        "256": "icons/icon-256.png"
    },
    "action": {
        "default_icon": "icons/icon-128.png",
        "default_title": "AnimeStar Extension",
        "default_popup": "pages/settings.html"
    },
    "options_page": "pages/settings.html"
}